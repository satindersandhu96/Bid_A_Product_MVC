@model IEnumerable<Bid_A_Product_MVC.Models.Bid>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seller)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BidPrice)
            </th>
            <th>
                StartingPrice
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Buyer.BuyerRegistrationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seller.SellerRegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductRegistrationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BidPrice)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Product.StartingPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
